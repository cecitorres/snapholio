{{#each assigments}}
  <div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <img src="{{image.imageUrl}}" alt="">
    <a class="btn btn-dark btn-block mb-2" href="/assigments/edit/{{id}}">Edit</a>
    <form method="post" action="/assigments/{{id}}?_method=DELETE">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" class="btn btn-danger btn-block" value="Delete">
    </form>
  </div>
{{else}}
  <p>No assigments listed</p>
{{/each}}