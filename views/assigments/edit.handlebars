{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{else}} {{/each}}

<div class="card card-body">
  <h3>Edit {{assigment.title}}</h3>
  <form action="/assigments/{{assigment.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="_method" value="PUT">
    <input type="text" class="form-control" name="title" value="{{assigment.title}}" required hidden>
    <div class="form-group">
      <label for="details">Photo</label>
      <img src="/{{assigment.image.imageUrl}}" class="img-thumbnail col-lg-12 col-sm-12">
      <input type="file" class="form-control-file" name="image" accept="image/*" capture="camera">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>